<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:charts="http://jmix.io/schema/charts/ui"
      title="msg://dashboardView.title">
    <layout spacing="true" padding="true">
        <hBox spacing="true" width="100%" height="200px">
            <!-- Out of Stock -->
            <vBox stylename="card"
                  width="25%"
                  height="100%"
                  spacing="true"
                  padding="true"
                  alignItems="center"
                  backgroundColor="var(--lumo-error-color-10)">
                <label value="Out of Stock"
                       stylename="bold large"/>
                <label id="outOfStockCount"
                       stylename="bold h1"/>
                <label value="Items"
                       stylename="helper"/>
            </vBox>

            <!-- Low Stock -->
            <vBox stylename="card"
                  width="25%"
                  height="100%"
                  spacing="true"
                  padding="true"
                  alignItems="center"
                  backgroundColor="var(--lumo-warning-color-10)">
                <label value="Low Stock"
                       stylename="bold large"/>
                <label id="lowStockCount"
                       stylename="bold h1"/>
                <label value="Items"
                       stylename="helper"/>
            </vBox>

            <!-- Expiring Soon -->
            <vBox stylename="card"
                  width="25%"
                  height="100%"
                  spacing="true"
                  padding="true"
                  alignItems="center"
                  backgroundColor="var(--lumo-primary-color-10)">
                <label value="Expiring Soon"
                       stylename="bold large"/>
                <label id="expiringSoonCount"
                       stylename="bold h1"/>
                <label value="Items"
                       stylename="helper"/>
            </vBox>

            <!-- Expired -->
            <vBox stylename="card"
                  width="25%"
                  height="100%"
                  spacing="true"
                  padding="true"
                  alignItems="center"
                  backgroundColor="var(--lumo-error-color-10)">
                <label value="Expired"
                       stylename="bold large"/>
                <label id="expiredCount"
                       stylename="bold h1"/>
                <label value="Items"
                       stylename="helper"/>
            </vBox>
        </hBox>
    </layout>
</view>